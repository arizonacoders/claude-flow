{
  "name": "claude-flow",
  "version": "0.2.0",
  "description": "Pre-issue refinement system with CLI and Web UI - a collaboration hub for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-flow": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "serve": "node dist/index.js serve",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "issue-tracking",
    "ai-agents",
    "collaboration"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arizonacoders/claude-flow.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
