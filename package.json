{
  "name": "claude-flow",
  "version": "0.1.0",
  "description": "CLI orchestrator for Claude Code sessions tied to GitHub issues",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-flow": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "workflow",
    "orchestration",
    "github-issues"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arizonacoders/claude-flow.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.4.1",
    "commander": "^13.0.0",
    "ora": "^8.1.1",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
